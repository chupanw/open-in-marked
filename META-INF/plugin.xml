<idea-plugin version="2">
    <id>com.vexus2.intellij.marked</id>
    <name>Open in Marked</name>
    <version>0.1</version>
    <vendor email="hikaru.tooyama@gmail.com" url="http://twitter.com/vexus2">Vexus2</vendor>

    <description><![CDATA[
      Open markdown file into Markdown Viewer Marked.<br>
      You need to install 'Marked'.<br>
      Visit this site.<br>
      http://markedapp.com/
      ]]></description>

    <change-notes><![CDATA[
      version 0.1<br>
      Initial release.<br>
      ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="openInMarked"
                class="com.vexus2.intellij.marked.Action"
                text="Marked"
                description="Open markdown file into Marked">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt M"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>